<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body class = "bg-white">
    <div class="container-fluid">
        <div class="row">
            <div class="mt-3">
                <main role="main" class= "col-lg-auto ml-lg-auto px-4"> 
                    <header class="navbar navbar-dark sticky-top bg-warning px-4">
                        <a class="navbar-brand col-lg-1 col-lg-1 fs-50" href="/profiles"><h1 style="color: black;">iSCAPE</h1>
                        </a>
                        <div>
                          <nav class="navbar navbar-expand-lg navbar-light bg-warning">
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                              <ul class="navbar-nav mr-auto">
                              <li class="nav-item active">
                                <!-- router.get('/profiles/:profileId/edit', Controller.editProfileForm) -->
                                <!-- router.get('/profiles/:profileId/posts/add', Controller.addPostForm) -->
                                <a href="/profiles/<%= id %>/posts/add" class="nav-link">Add New Post</a>
                              </li>
                            </div>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                              <ul class="navbar-nav mr-auto">
                              <li class="nav-item active">
                                <a href="/" class="nav-link">LogOut</a>
                              </li>
                            </div>
                          </nav>
                        </div>
                    </header>

                    <div class="container d-flex flex-column align-items-center">
                        <h3><%= `${profileData.dataValues.genderPronoun} ${profileData.fullName}` %></h3>
                        <div class="row row-cols-md">
                            <% profileData.Posts.forEach(post => { %>
                            <div class="card mb-4">
                                <img src="<%= post.imgUrl %>" class="card-img-top" alt="Landscape Pict"  height="flex">
                                <div class="card-body">
                                    <h3 class="card-title"><%= post.caption %></h3>
                                    <p class="card-text"><%=formatPublished(post.createdAt)%></p>
                                        <% post.Tags.forEach( tag => { %>
                                            <button class="btn btn-info"><%=tag.name%></button>
                                            <% }) %>
                                    <br><br>
                                    <% if (profileData.id == id) { %>
                                        <a href="/profiles/<%=profileData.id%>/posts/<%=post.id%>/tags/add" class="btn btn-primary">Add Tag</a>
                                        <a href="/profiles/<%=profileData.id%>/posts/<%=post.id%>/delete" class="btn btn-danger">Delete</a>
                                    <% } %>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                      </div>
                       
                    
</body>
</html>