<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body class = "bg-white">
    <br><br>
    <div class="d-flex justify-content-center"  style="font-size: 30px;">
        <div class="p-2">
            <a href="/">
                <button type="button" class="btn btn-md btn-primary">Home</button>
            </a>
        </div>
        <div class="p-2">
            <a href="/stores/add">
                <button type="button" class="btn btn-md btn-primary">Add a New Store</button>
            </a>
        </div>
        <div class="p-2">
            <a href="/employees">
                <button type="button" class="btn btn-md btn-primary">Employees</button>
            </a>
        </div>
    </div>
    <br><br>
    <h1 class="p-2 d-flex justify-content-center" style="font-size: 60PX;"><%= result.name %></h1>
    <h3 class="p-2 d-flex justify-content-center"><%= result.code %></h3>
    <% if(result.Employees.length === 0){ %>
    <h5 class="p-2 d-flex justify-content-center">There is no employee yet</h5>
    <h6 class="p-2 d-flex justify-content-center">Click this <a class="px-1" href="/stores/<%= result.id %>/employees/add">link</a> to add employee</h6>
    <h3 class="p-2 d-flex justify-content-center">Employees Fee: </h3>
    <% }else if(result.Employees.length !== 0){ %>
        <% if (alert) { %>
            <p class="p-2 d-flex justify-content-center" style="color: red">
                <%=alert%> removed
            </p>
            <% } %>  
            <h6 class="p-2 d-flex justify-content-center">Click this <a class="px-1" href="/stores/<%= result.id %>/employees/add">link</a> to add employee</h6>
            <h3 class="p-2 d-flex justify-content-center">Employees Fee: </h3>
    <div>
        
        <main role="main" class= "col-lg-auto ml-lg-auto px-5">
            <table class="table">
                
                <tr>
                    <th scope="col">first name</th>
                    <th scope="col">last name</th>
                    <th scope="col">age</th>
                    <th scope="col">education</th>
                    <th scope="col">position</th>
                    <th scope="col">salary</th>
                    <th scope="col">action</th>
                </tr>
                
                <% result.Employees.forEach(el => { %>
                        <tr>
                            <td><%= el.firstName %></td>
                            <td><%= el.lastName %></td>                              
                            <td><%= el.dateOfBirth = new Date(el.dateOfBirth).getUTCFullYear();%></td>
                            <td><%= el.education %></td>    
                            <td><%= el.position %></td>
                            <td><%= el.salary %></td>
                            <td>
                                <a href="/stores/<%= result.id %>/employees/<%= el.id %>/edit">
                                    <button type="button" class="btn btn-sm btn-primary">
                                        Edit
                                    </button>
                                </a>
                                <a href="/stores/<%= result.id %>/employees/<%= el.id %>/delete">
                                    <button type="button" class="btn btn-sm btn-primary">
                                        Delete
                                    </button>
                                </a>
                            </td>
                        </tr>

                        <% }); %>
                </table>
            </main>
        </div>
        <% } %>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>